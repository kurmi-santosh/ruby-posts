<% content_for :title do %>
  Posts &ndash; <%= DateTime.now.to_formatted_s(:nice_date) %>
<% end %>
<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
    <hr/>
  <% end %>
 
</div>

<%= link_to "New post", new_post_path %>
