<% if (@posts.count == 0) %>
    <h3>No posts found!</h3>
<% else %>
    <% @posts.each do |day, entries| %>
        <h3>Entries for <%= day %></h3>
        <% entries.each do |entry| %>
            <%= link_to post_path(entry), style: 'text-decoration:none' do %>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                        <p><strong><%= entry.title %></strong> - from <%= entry.username %> aged <%= entry.age %> years</p>     
                    </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    <% end %>
<% end %>

